<?php
/**
 * Dynamic Layout System
 * 
 * Components are loaded from the database (layout_settings table)
 * and rendered in the configured order.
 * 
 * To modify the layout:
 * 1. Go to the database
 * 2. Update the layout_settings table for page_name = 'home'
 * 3. Change order_index to reorder components
 * 4. Set is_visible = 0 to hide components
 */

// Render all components in configured order
if (!empty($components)) {
    foreach ($components as $component) {
        echo $component->render();
    }
} else {
    // Fallback message if no components configured
    echo '<div class="alert alert-info">No components configured for this page.</div>';
}
?>

